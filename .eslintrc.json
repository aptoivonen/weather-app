{
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-console": "off",
    "class-methods-use-this": "off",
    "import/no-extraneous-dependencies": "off",
    "no-new": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off"
  },
  "env": {
    "browser": true
  }
}
